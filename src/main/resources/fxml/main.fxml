<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="670.0" prefWidth="895.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jira.reporter.controller.MainController">
    <TextArea id="viewText" fx:id="viewText" editable="false" prefHeight="406.0" prefWidth="895.0">
        <font>
        <Font size="16.0" />
        </font>
    </TextArea>
    <TextArea id="addText" fx:id="addText">
        <font>
        <Font size="16.0" />
        </font>
    </TextArea>
    <HBox alignment="CENTER" depthTest="ENABLE" prefHeight="46.0" prefWidth="895.0" spacing="10.0">
        <effect>
            <Glow />
        </effect>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
        <Button id="startButton" fx:id="startButton" onMouseClicked="#run" text="Go">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button fx:id="sendButton" onMouseClicked="#send" text="Send">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onMouseClicked="#settings" prefHeight="32.0" prefWidth="93.0" text="Settings">
            <font>
                <Font size="16.0" />
            </font></Button>
        <Button id="exitButton" fx:id="exitButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onMouseClicked="#exit" prefHeight="32.0" prefWidth="68.0" text="Close">
         <font>
            <Font size="16.0" />
         </font>
        </Button>
    </HBox>
</VBox>
